@using A2Test2.Helpers
@inject IAudioPlayerService audioManager

<div class="modal fade @classText" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" style="display: @modalDisply">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@ModalTitle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" @onclick="Close" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @ModalBody
            </div>
            <div class="modal-footer">
                @ModalFooter
            </div>
        </div>
    </div>
</div>

@if (showBackdrop)
            {
                <div class="modal-backdrop fade show"></div>
            }

@code {
    public string classText = "";
    public string modalDisply = "none;";
    public bool showBackdrop = false;

    [Parameter]
    public RenderFragment ModalBody { get; set; }

    [Parameter]
    public RenderFragment ModalTitle { get; set; }

    [Parameter]
    public RenderFragment ModalFooter { get; set; }


    public void Open()
    {
        audioManager.PlayUISound("notify3.ogg");
        classText = "show";
        modalDisply = "block;";
        showBackdrop = true;
        StateHasChanged();
    }

    public void Close()
    {
        classText = "";
        modalDisply = "none;";
        showBackdrop = false;
        StateHasChanged();
    }



    }
