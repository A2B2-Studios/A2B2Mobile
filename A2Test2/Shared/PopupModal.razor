<div class="modal fade @classText" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" style="display: @modalDisply">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" @onclick="Close" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @ModalBody
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

@if (showBackdrop)
            {
                <div class="modal-backdrop fade show"></div>
            }

@code {
    public string classText = "";
    public string modalDisply = "none;";
    public bool showBackdrop = false;

    [Parameter]
    public RenderFragment ModalBody { get; set; }


    public void Open()
    {
        classText = "show";
        modalDisply = "block;";
        showBackdrop = true;
        StateHasChanged();
    }

    public void Close()
    {
        classText = "";
        modalDisply = "none;";
        showBackdrop = false;
        StateHasChanged();
    }



    }
